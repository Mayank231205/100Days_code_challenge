/* 100 Days Code; Day 76 (Program: Reverse a Number) */
#include<stdio.h>
int main()
{
    printf("Himansh Jeengar\nSAP ID: 590025460\nCourse- BSc CS\nBatch-1");
    printf("\n-----------------\n");

    int num, rev = 0, rem;

    printf("Enter number: ");
    scanf("%d", &num);

    while(num != 0)
    {
        rem = num % 10;
        rev = rev * 10 + rem;
        num /= 10;
    }

    printf("Reversed = %d", rev);

    return 0;
}
