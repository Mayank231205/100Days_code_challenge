/* 100 Days Code; Day 38: Code 2 */
#include<stdio.h>
int main()
{
     printf("Mayank Singh\nSAP ID: 590026159\nCourse- BSc CS\nBatch-1"); 
    printf("\n-----------------\n");

    int n;
    printf("Enter number of rows: ");
    scanf("%d", &n);

    for(int i = n; i >= 1; i--){
        for(int j = 1; j <= i; j++)
            printf("* ");
        printf("\n");
    }
    return 0;
}
