/* 100 Days Code; Day 59: Code 1 */
#include<stdio.h>
int main()
{
    printf("Mayank Singh\nSAP ID: 590026159\nCourse- BSc CS\nBatch-1");
    printf("\n-----------------\n");

    int n, sum = 0;
    printf("Enter N: ");
    scanf("%d", &n);

    for(int i = 2; i <= n; i += 2)
        sum += i;

    printf("Sum of even numbers = %d", sum);
    return 0;
}
