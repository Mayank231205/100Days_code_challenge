/* 100 Days Code; Day 67 */
#include<stdio.h>
int main()
{
    printf("Mayank Singh\nSAP ID: 590026159\nCourse- BSc CS\nBatch-1");
    printf("\n-----------------\n");

    int n, a[100], sum = 0;
    float avg;
    printf("Enter size: ");
    scanf("%d", &n);

    printf("Enter numbers: ");
    for(int i = 0; i < n; i++)
    {
        scanf("%d", &a[i]);
        sum += a[i];
    }

    avg = (float)sum / n;
    printf("Average = %.2f", avg);

    return 0;
}
